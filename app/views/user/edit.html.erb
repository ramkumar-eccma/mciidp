<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <img alt="image" class="img-responsive" src="<%= image_url 'headerlogo.jpg' %> " height="50px" />      
        <div class="clearfix"></div>
        <ol class="breadcrumb">
            <li>
              Home
            </li>
            <li>
              Dashboard
            </li>
             <li class="active">
               Edit Profile
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
              <h4>Edit Profile</h4>
          </div>
          <div class="panel-body">
              <div class="row">
                <%= form_for :user, :as => :user, :url => user_update_path, :method=>"post" do |f| %>
                  <div class="col-sm-4">
                      <div class="form-group">                         
                        <%- if I18n.locale== :ar %>
                          <label>اسم</label>	
                          <%= f.text_field :name,class:'form-control',placeholder:'اسم',required:"required", autofocus: true %>
                        <% else %>
						  <label>Name</label>
                          <%= f.text_field :name,class:'form-control',placeholder:'Name',required:"required", autofocus: true %>
                        <% end -%>
                        <%= f.text_field :id, class:'hide' %>
                      </div>  
                  </div>  
                  <div class="col-sm-4">
                      <div class="form-group">                         
                        <%- if I18n.locale== :ar %>
                          <label>البريد الإلكتروني</label>	
                          <%= f.email_field :email,class:'form-control diabled',placeholder:'البريد الإلكتروني',required:"required", autofocus: true %>
                        <% else %>
						  <label>Email</label>
                          <%= f.email_field :email,class:'form-control diabled',placeholder:'Email',required:"required", autofocus: true %>
                        <% end -%>
                      </div> 
                  </div>  
                  <div class="col-sm-4">     
                      <div class="form-group">                         
                        <%- if I18n.locale== :ar %>                          
                          <label>اسم المؤسسة</label>
                          <%= f.text_field :Organization_name,class:'form-control', placeholder:'اسم المؤسسة',required:"required"%>
                        <% else %>
                          <label>Organization Name</label>
                          <%= f.text_field :Organization_name,class:'form-control', placeholder:'Organization Name',required:"required"%>
                        <% end -%>
                      </div>
                  </div>  
                  <div class="col-sm-4">                      
                      <div class="form-group"> 
                        <%- if I18n.locale== :ar %>
                          <label>التعيين</label>
                          <%= f.text_field :designation,class:'form-control', placeholder:'التعيين',required:"required"%>
                        <% else %>
                          <label>Designation</label>
                          <%= f.text_field :designation,class:'form-control', placeholder:'Designation',required:"required"%>
                        <% end -%>            
                      </div>                                                     
                  </div>

                  <div class="col-sm-4">                    
                      <div class="form-group">
                        <%- if I18n.locale== :ar %>
                    	  <label>مستوى #</label>                    	  
                          <%= f.number_field :level,class:'form-control', in: 1...4%>
                        <% else %>
                          <label>Level #</label>
                          <%= f.number_field :level,class:'form-control', in: 1...4%>
                        <% end -%>
                      </div>
				  </div>  
                  <div class="col-sm-1">
                      <div class="form-group">                         
                        <%- if I18n.locale== :ar %>   <br>                       
                          <label>المشرف</label>
                          <%= f.check_box :admin%>
                        <% else %>
                          <label>Admin</label><br>     
                          <%= f.check_box :admin%>
                        <% end -%>            
                      </div>
				  </div>  
                  <div class="col-sm-3">
                      <div class="actions">
                        <%- if I18n.locale== :ar %>
                          <br><%= f.submit "تحديث",class:"btn btn-primary block pull-right" %>
                        <% else %>
                         <br> <%= f.submit "Update",class:"btn btn-primary block pull-right" %>
                        <% end -%>
                      </div>
                  </div>
                 
                <% end -%>
              </div>
          </div>
      </div>
    </div>
  </div> 
</div>  


