<div class="hide">
	<%- if controller_name != 'sessions' %>
		<%- if I18n.locale== :ar %>
			<%= link_to "تسجيل الدخول", new_session_path(resource_name) %>
		<% else %>  
			<%= link_to "Log in", new_session_path(resource_name) %>
		<% end -%><br />
	<% end -%>

	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		<%- if I18n.locale== :ar %>
			<%= link_to "سجل", new_session_path(resource_name) %>
		<% else %>  
			<%= link_to "Sign up", new_registration_path(resource_name) %>
		<% end -%>
	  <br />
	<% end -%>
	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		<%- if I18n.locale== :ar %>
			<%= link_to "هل نسيت كلمة المرور ؟", new_password_path(resource_name) %>
		<% else %>
			<%= link_to "Forgot your password?", new_password_path(resource_name) %>
		<% end -%><br />
	<% end -%>	
</div>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  	<%- if I18n.locale== :ar %>
		<%= link_to "لم تتلق تعليمات التأكيد؟", new_confirmation_path(resource_name) %>
	<% else %>
		<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
	<% end -%>
  <br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  	<%- if I18n.locale== :ar %>
		<%= link_to "لم تتلق تعليمات فتح ؟", new_unlock_path(resource_name) %>
	<% else %>
		<%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
	<% end -%><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%- if I18n.locale== :ar %>
		<%= link_to "تسجيل الدخول ب #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
	<% else %>
		<%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
	<% end -%>
    <br />
  <% end -%>
<% end -%>
